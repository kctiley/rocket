extends layout

block content
  h1(id= "megashadow")= title
  p
    a(href='/rocket/signup') New Player
  p 
    a(href='/rocket/login') Login
  p
  table
    thead
      tr
        th(id= "nameColumn") Name
        th ID
        th(id= "gamesPlayedColumn") Games Played
        th(id= "winsColumn") Wins

    tbody
      for player in allPlayers
        tr
          td= player.name
          td= player._id 
          td= player.gamesPlayed
          td=player.gamesWon
